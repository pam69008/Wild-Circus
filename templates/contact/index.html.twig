{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
    <h1 class="text-center"><i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i> Contactez
        nous <i class="fa fa-star"></i> <i class="fa fa-star"></i> <i class="fa fa-star"></i></h1>
    <p class="text-center p-2">
        <i>(Une moindre question n'hesitez pas nous prendrons le temps de vous répondre.)</i>
    </p>
    {{ form_start(form) }}
    <div class="container">
        <section class="section pb-5">
            <div class="row">
                <div class="col-12">
                    <div class="card bg-transparent">
                        <div class="card-body">
                            <div class="form-header blue accent-1">
                                <h2 class="text-center"> Pour nous écrire</h2>
                            </div>
                            <br>
                            <div class="md-form">
                                {{ form_label (form.lastname, 'Nom :') }}
                                {{ form_widget(form.lastname) }}

                            </div>

                            <div class="md-form">
                                {{ form_label (form.email, 'Email :') }}
                                {{ form_widget(form.email) }}
                            </div>

                            <div class="md-form">
                                {{ form_rest(form) }}
                            </div>
                            <div class="text-center mt-4">
                                <button class="btn-dark float-right" type="submit">Envoyer</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        {{ form_end(form) }}
    </div>
{% endblock %}