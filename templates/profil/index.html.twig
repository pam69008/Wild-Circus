{% extends 'base.html.twig' %}

{% block title %}Mon compte{% endblock %}

{% block body %}

    <div class="container-fluid">

        <h3 class="text-center">{{ user.firstname }} {{ user.lastname }}</h3>
        <h6 class="text-center p-2">Email: {{ user.email }}</h6>
        <h6 class="text-center p-2">Adresse: {{ user.address }} {{ user.code }} {{ user.city }}</h6>
    </div>
    <hr class="w-75 bg-dark">

    <div class="container">
        <h3 class="text-center p-2 mt-2"> Mon historique de réservation</h3>

        <table class="table">
            <thead>
            <tr>
                <th>Evenements</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            {% for inscription in inscriptions %}
                <tr>
                    <td> {{ inscription.event.name }}</td>
                    <td>{{ inscription.quantity }} ticket</td>
                    <td>{{ inscription.event.price }} €</td>
                </tr>
            {% endfor %}
        </table>
    </div>
{% endblock %}
