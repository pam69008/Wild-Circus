{% extends 'base.html.twig' %}

{% block title %}L'équipe{% endblock %}
{% block body %}
    <section class="site-section border-bottom mt-2" id="team-section">
    <div class="container">
    <div class="row mb-5 justify-content-center">
    <div class="col-md-8 text-center">
        <h2 class="section-title mb-3 mt-2" data-aos="fade-up" data-aos-delay="" style="color: whitesmoke">
            L'équipe</h2>
        <p class="lead" data-aos="fade-up" data-aos-delay="100">
    </div>
    <div class="row mt-2">
        {% for membre in membres %}
            <div class="col-md-6 col-lg-3 mb-4" data-aos="fade-up" data-aos-delay="">
                <div class="team-member">
                    <figure>
                        <ul class="social bg-dark">
                            <li><a href="" data-toggle="modal" data-target="#membre{{ membre.id }}"><i class="fa fa-info" aria-hidden="true"></i> </a></li>
                        </ul>
                        <img src="{{ ('images/team/'~membre.imageName) }}" alt="Image" class="img-fluid img-thumbnail">
                    </figure>
                    <div class="p-3">
                        <h3 style="text-align: center">{{ membre.firstname }} {{ membre.lastname }}</h3>
                    </div>
                </div>
            </div>

            <div class="modal" id="membre{{ membre.id }}" tabindex="-1" role="dialog"
                 aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="" style="text-align: center">{{ membre.firstname }} {{ membre.lastname }}</h5>
                            <button type="button" class="close" data-dismiss="modal"
                                    aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <p class="pt-1 pb-2">{{ membre.description }}</p>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}